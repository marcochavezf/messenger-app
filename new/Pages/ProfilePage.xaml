<?xml version="1.0" encoding="UTF-8"?>
<acp:BasePage
	x:TypeArguments="v:ProfileViewModel"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:ac="clr-namespace:AppCreator.Custom;assembly=AppCreator"
	xmlns:acp="clr-namespace:AppCreator.Pages;assembly=AppCreator"
	xmlns:acc="clr-namespace:AppCreator.UI.Controls;assembly=AppCreator.UI"
	xmlns:acvm="clr-namespace:AppCreator.ViewModels;assembly=AppCreator"
	xmlns:accu="clr-namespace:AppCreator.Custom;assembly=AppCreator"
	xmlns:am="clr-namespace:AppCreator.Markup;assembly=AppCreator"
	xmlns:e="clr-namespace:AppCreator.Behaviors;assembly=AppCreator"
	xmlns:v="clr-namespace:Kangou.ViewModels;assembly=Kangou"
	xmlns:c="clr-namespace:Kangou.Custom;assembly=Kangou"
	x:Class="Kangou.Pages.ProfilePage"
	Title="Kangou ID">
	<StackLayout
		Orientation="Vertical"
		Padding="0, 50, 0, 0"
		Spacing="10">
		<ac:CircleImage
			WidthRequest="200"
			HeightRequest="200"
			Source="{Binding Image}"
			HorizontalOptions="Center" />
		<acc:Spacer
			Space="10" />
		<c:RobotoLLabel
			Text="{Binding Name}"
			FontSize="14"
			HorizontalOptions="Center" />
		<c:RobotoLLabel
			Text="{Binding Title}"
			FontSize="10"
			HorizontalOptions="Center" />
		<acc:Spacer
			Space="30" />
		<StackLayout
			Orientation="Vertical"
			Padding="0"
			Spacing="10">
		</StackLayout>
		<StackLayout
			Orientation="Horizontal"
			HorizontalOptions="CenterAndExpand"
			Padding="0"
			Spacing="30">
			<Image
				Source="http://lorempixel.com/300/200/cats/Correos/" />
			<Image
				Source="http://lorempixel.com/300/200/cats/Kangou/" />
		</StackLayout>
		<acc:Spacer
			Space="30" />
		<c:RobotoLLabel
			Text="Kangou autorizado"
			FontSize="20"
			FontAttributes="Bold"
			HorizontalOptions="Center" />
	</StackLayout>
</acp:BasePage>